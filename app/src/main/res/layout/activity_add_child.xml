<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCEF0FF"
    tools:context=".screens.AddChild">


    <Button
        android:id="@+id/button"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:background="#B1AEAE"
        android:fontFamily="@font/asakimboldwebfont"
        android:text="רשום"
        android:textColor="#5E5C5C"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="636dp" />

    <CalendarView
        android:id="@+id/birthdayC"
        android:layout_width="204dp"
        android:layout_height="257dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="352dp" />

    <EditText
        android:id="@+id/etCLName"
        android:layout_width="355dp"
        android:layout_height="48dp"
        android:ems="10"
        android:fontFamily="@font/assistantsemibold"
        android:hint="שם משפחה"
        android:inputType="text"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="220dp" />

    <TextView
        android:id="@+id/tvbirthdayC"
        android:layout_width="188dp"
        android:layout_height="48dp"
        android:fontFamily="@font/assistantsemibold"
        android:text="הוסף תאריך לידה :"
        android:textColor="#4C4C4C"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="370dp" />

    <EditText
        android:id="@+id/etCommentsC"
        android:layout_width="355dp"
        android:layout_height="48dp"
        android:ems="10"
        android:fontFamily="@font/assistantsemibold"
        android:hint="הערות נוספות (אלרגיות וכו'..)"
        android:inputType="text"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="268dp" />

    <EditText
        android:id="@+id/etCId"
        android:layout_width="355dp"
        android:layout_height="48dp"
        android:ems="10"
        android:fontFamily="@font/assistantsemibold"
        android:hint="מס' תעודת זהות"
        android:inputType="text"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="316dp" />

    <EditText
        android:id="@+id/etCFName"
        android:layout_width="355dp"
        android:layout_height="48dp"
        android:ems="10"
        android:fontFamily="@font/assistantsemibold"
        android:hint="שם פרטי"
        android:inputType="text"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="172dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="275dp"
        android:layout_height="94dp"
        android:fontFamily="@font/horevclmheavywebfont"
        android:gravity="center"
        android:text="רישום-ילד"
        android:textColor="#878686"
        android:textSize="90sp"
        android:typeface="serif"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="47dp" />

</androidx.constraintlayout.widget.ConstraintLayout>