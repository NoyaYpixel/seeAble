<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCEF0FF"
    tools:context=".screens.AdminPage">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="87dp"
        android:fontFamily="@font/horevclmheavywebfont"
        android:gravity="center"
        android:text="הרשאות מנהל.ת"
        android:textColor="#878686"
        android:textSize="90sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddChild"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddChild"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="8dp"
        android:background="#5C91EC"
        android:text="+"
        android:textSize="45sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/btnAddTeamMember"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="108dp"
        android:background="#DDDDDD"
        android:fontFamily="@font/assistantsemibold"
        android:gravity="center"
        android:text="הוספת ילד"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAddChild"
        app:layout_constraintEnd_toStartOf="@+id/btnAddChild"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnAddChild" />

    <Button
        android:id="@+id/btnAddTeamMember"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="8dp"
        android:background="#5C91EC"
        android:text="+"
        android:textSize="45sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/btnSendMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/btnAddChild" />

    <Button
        android:id="@+id/btnSendMessage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="223dp"
        android:background="#5C91EC"
        android:text="+"
        android:textSize="45sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/btnAddTeamMember" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="108dp"
        android:background="#DDDDDD"
        android:fontFamily="@font/assistantsemibold"
        android:gravity="center"
        android:text="שליחת הודעת תפוצה"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSendMessage"
        app:layout_constraintEnd_toStartOf="@+id/btnSendMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnSendMessage" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="108dp"
        android:background="#DDDDDD"
        android:fontFamily="@font/assistantsemibold"
        android:gravity="center"
        android:text="הוספת           איש צוות"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAddTeamMember"
        app:layout_constraintEnd_toStartOf="@+id/btnAddTeamMember"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnAddTeamMember" />

</androidx.constraintlayout.widget.ConstraintLayout>