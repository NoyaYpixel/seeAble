<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2DCE1"
    tools:context=".screens.AdminPage">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="271dp"
        android:layout_height="60dp"
        android:fontFamily="@font/osluizi"
        android:text="הרשאות"
        android:textColor="#878686"
        android:textSize="60dp"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="69dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="411dp"
        android:layout_height="67dp"
        android:fontFamily="@font/osluizi"
        android:text="מנהל/ת"
        android:textColor="#878686"
        android:textSize="60dp"
        tools:layout_editor_absoluteX="-174dp"
        tools:layout_editor_absoluteY="114dp" />

    <Button
        android:id="@+id/btnAddComment"
        android:layout_width="205dp"
        android:layout_height="63dp"
        android:layout_marginBottom="12dp"
        android:background="#E8E8E8"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddChild"
        android:layout_width="205dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:background="#E8E8E8"
        android:fontFamily="@font/assistantsemibold"
        android:text="הוספת ילד"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddTeamMember"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnAddTeamMember"
        android:layout_width="205dp"
        android:layout_height="63dp"
        android:layout_marginBottom="12dp"
        android:background="#E8E8E8"
        android:fontFamily="@font/assistantsemibold"
        android:text="הוספת איש צוות"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddComment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="205dp"
        android:layout_height="63dp"
        android:layout_marginBottom="208dp"
        android:background="#E8E8E8"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>