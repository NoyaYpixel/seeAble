        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="0dp">

        <TableRow
            android:layout_width="362dp"
            android:layout_height="115dp"
            android:layoutDirection="rtl">

            <TextView
                android:layout_width="wrap_content"
