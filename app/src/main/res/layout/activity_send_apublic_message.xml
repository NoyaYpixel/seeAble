<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCEF0FF"
    tools:context=".screens.SendAPublicMessage">

    <Spinner
        android:id="@+id/spinner_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:entries="@array/arrWho"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:fontFamily="@font/assistantsemibold"
        android:hint="תוכן ההודעה"
        android:inputType="text"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_message"
        app:layout_constraintStart_toStartOf="@+id/spinner_message"
        app:layout_constraintTop_toBottomOf="@+id/spinner_message" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="345dp"
        android:layout_height="131dp"
        android:layout_marginTop="166dp"
        android:fontFamily="@font/asakimboldwebfont"
        android:gravity="center"
        android:text="שליחת הודעת תפוצה"
        android:textColor="#878686"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSendPublicM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#B1AEAE"
        android:fontFamily="@font/asakimboldwebfont"
        android:text="שלח הודעה"
        android:textColor="#5E5C5C"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_content"
        app:layout_constraintTop_toBottomOf="@+id/et_content"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>